<Window x:Class="TP_Feugere_Adipietro_Garrach.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_Feugere_Adipietro_Garrach"
        mc:Ignorable="d"
        Title="LogIn" Height="239.121" Width="376.569">
    <Window.Background>
        <ImageBrush ImageSource="Ressources/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <GroupBox x:Name="groupBox" Header="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="135" Width="349" FontFamily="Verdana"/>
