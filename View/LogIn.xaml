        <Label x:Name="labelLogin" Content="Login :" HorizontalAlignment="Left" Margin="24,38,0,0" VerticalAlignment="Top" Width="62" Foreground="#FFFDFBFB" FontFamily="Verdana"/>
        <Label x:Name="labelMdp" Content="Mot de passe :" HorizontalAlignment="Left" Margin="24,92,0,0" VerticalAlignment="Top" Width="94" Foreground="White" FontFamily="Verdana"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="23" Margin="160,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" FontFamily="Verdana"/>
        <PasswordBox x:Name="textBoxMdp" HorizontalAlignment="Left" Margin="160,92,0,0" VerticalAlignment="Top" Width="169" Height="25"/>

    </Grid>
</Window>
